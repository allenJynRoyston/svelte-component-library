{
  "include": ["src", "stories"],
  "exclude": [
    "node_modules/**",
    "dist/**",
    "**/*.stories.tsx",
    "**/*.test.tsx"
  ],
  "compilerOptions": {
    "target": "es2019",
    "types": ["svelte", "jest"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
